<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/addExerciseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/addExerciseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/addExerciseTextView"
        android:orientation="horizontal">

        <!-- Sets -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/planNameLayout"
            android:text="Sets: "
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/addExerciseSetsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/planNameLayout"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Reps -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/planNameLayout"
            android:layout_marginStart="10dp"
            android:text="Reps: "
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/addExerciseRepsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/planNameLayout"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Weight -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/planNameLayout"
            android:layout_marginStart="10dp"
            android:text="Weight: "
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/addExerciseWeightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/planNameLayout"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>