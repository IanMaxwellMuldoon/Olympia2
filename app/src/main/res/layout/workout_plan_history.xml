<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/planHistoryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewHistory.WorkoutPlanHistory.WorkoutPlanList">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/workoutPlanTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Workout Plans"
        android:textColor="@color/black"
        android:textSize="32dp" />

    <ListView
        android:id="@+id/idworkoutPlanListView"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/planMenuBtn"
        android:layout_below="@id/workoutPlanTitle" />

    <Button
        android:id="@+id/planMenuBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Workout Plans Menu" />
</RelativeLayout>